---
import Layout from "@/layouts/Layout.astro";
import { formatDateShort } from "@/lib/format";
import { getPostsByType, getPublishedDate, loadPublishedDates, sortByDate } from "@/lib/posts";

const publishedDates = loadPublishedDates();
const posts = sortByDate(getPostsByType("thought"), publishedDates);
---

<Layout title="Thoughts">
	<header>
		<h1>Thoughts</h1>
		<p class="subtitle">짧은 에세이, 생각, 관점</p>
	</header>

	{posts.length === 0 ? (
		<p>아직 글이 없습니다.</p>
	) : (
		<div class="timeline">
			{posts.map((post) => {
				const date = getPublishedDate(post, publishedDates);
				return (
					<article>
						<time datetime={date}>{formatDateShort(date)}</time>
						<h3><a href={`/thoughts/${post.slug}`}>{post.title}</a></h3>
					</article>
				);
			})}
		</div>
	)}
</Layout>

<style>
	header {
		margin-bottom: 2rem;
	}
	.subtitle {
		color: #666;
		margin-top: 0.5rem;
	}
	.timeline {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	article {
		display: flex;
		align-items: baseline;
		gap: 1rem;
	}
	article time {
		flex-shrink: 0;
		width: 6rem;
		color: #666;
		font-size: 0.875rem;
	}
	article h3 {
		margin: 0;
		font-size: 1rem;
		font-weight: normal;
	}
	article h3 a {
		text-decoration: none;
	}
	article h3 a:hover {
		text-decoration: underline;
	}
</style>
